@model CustomerModel

<div class="price-form">
    <div class="text-center">
        <h2>Sigortalı Girişi</h2>
    </div>
    <form action="" method="post" id="customerForm">
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>TC Kimlik No</label>
                <input type="number" class="form-control" name="TCKNo" maxlength="11" value="@(Model.TCKNo)" placeholder="TC Kimlik NO" />
            </div>
            <div class="form-group col-md-4">
                <label>Yabancı Kimlik No</label>
                <input type="number" class="form-control" name="ForeignTCKNo" maxlength="20" value="@(Model.ForeignTCKNo)" placeholder="Yabancı Kimlik No" />
            </div>
            <div class="form-group col-md-4">
                <label>Pasaport No</label>
                <input type="number" class="form-control" name="PassportNo" maxlength="7" value="@(Model.PassportNo)" placeholder="Pasaport No" />
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>Boy</label>
                <input type="number" class="form-control" name="Height" value="@(Model.Height)" placeholder="Boy" />
            </div>
            <div class="form-group col-md-4">
                <label>Kilo</label>
                <input type="number" class="form-control" name="Weight" value="@(Model.Weight)" placeholder="Kilo" />
            </div>
            <div class="form-group col-md-4">
                <label>Yakınlık</label>
                <select class="form-control" name="ProximityType">
                    <option value="@((int)ProximityType.HIMSELF)">Kendisi</option>
                    <option value="@((int)ProximityType.WIFE)">Eşi</option>
                    <option value="@((int)ProximityType.CHILDREN)">Çoçuğu</option>
                    <option value="@((int)ProximityType.OTHER)">Diğer</option>
                </select>
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>Adı</label>
                <input type="number" class="form-control" name="Name" maxlength="11" value="@(Model.Name)" placeholder="Ad" />
            </div>
            <div class="form-group col-md-4">
                <label>Soyadı</label>
                <input type="number" class="form-control" name="Surname" maxlength="20" value="@(Model.Surname)" placeholder="Soyad" />
            </div>
            <div class="form-group col-md-4">
                <label>Cinsiyet</label><br />
                <div class="custom-control custom-radio custom-control-inline ml-4">
                    <input type="radio" asp-for="Gender" value="@((int)Gender.MALE)" id="Gender@(((int)Gender.MALE)+5)" class="custom-control-input" />
                    <label class="custom-control-label" for="Gender@(((int)Gender.MALE)+5)">Erkek</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline ml-4">
                    <input type="radio" asp-for="Gender" value="@((int)Gender.FEMALE)" id="Gender@(((int)Gender.FEMALE)+5)" class="custom-control-input" />
                    <label class="custom-control-label" for="Gender@(((int)Gender.FEMALE)+5)">Kadın</label>
                </div>
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>Telefon Numarası</label>
                <input type="number" class="form-control" name="PhoneNumber" maxlength="10" value="@(Model.PhoneNumber)" placeholder="(5**) *** ** **" />
            </div>
            <div class="form-group col-md-4">
                <label>E-Posta</label>
                <input type="email" class="form-control" name="Email" value="@(Model.Email)" placeholder="E-Posta" />
            </div>
            <div class="form-group col-md-4">
                <label>Doğum Tarihi</label>
                <input type="date" class="form-control" name="DateOfBirth" value="@(Model.DateOfBirth.ToString("yyyy-MM-dd"))" placeholder="GG/AA/YYYY" />
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>Ülke</label>
                <select class="form-control" name="CountryId">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Uyruk</label>
                <select class="form-control" name="NationalityId">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Meslek</label>
                <select class="form-control" name="JobId">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-12">
                <label>Adres</label>
                <textarea rows="5" class="form-control" name="Address" value="@(Model.Address)" placeholder="Adres"></textarea>
            </div>
        </div>
        <div class="form-row row-center">
            <div class="form-group col-md-4">
                <label>İl</label>
                <select class="form-control" name="CityId">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>İlçe</label>
                <select class="form-control" name="DistrictId">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-md-4 text-right mt-5">
                <button type="button" class="btn btn-primary"><i class="fas fa-plus"></i> Sigortalı Ekle</button>
            </div>
        </div>
        <div class="btn-div mt-2">
            <button type="submit" class="btn"><i class="fas fa-arrow-right"></i> İLERİ</button>
        </div>
    </form>
</div>